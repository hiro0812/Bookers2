<h2>User info</h2>
  <div>
    <%= image_tag current_user.get_profile_image(100, 100) %>
  </div>

  <p>name</p>
    <%= current_user.name %>

  <p>introduction</p>
    <%= current_user.introduction %>

  <div class="edit-icons">
    <%= link_to edit_user_path(current_user), class: "btn btn-outline-secondary btn-block" do %>
    <i class="fas fa-user-cog"></i>
    <% end %>
  </div>


