<h1>Book Dateil</h1>
  <!--↓アプリケーション２の１１章参照-->
  <% @books.each do |book| %>
  <div>
    <%= image_tag book.get_image %>
    <p><%= image_tag 'sample-author1.jpg' %></p>
    <p>ユーザーネーム：<%= book.user.name %></p>
    <p>title：<%= book.title %></p>
    <p>opinion：<%= book.body %></p>
    <% if @book.user == current_user %>
      <%= link_to "削除", book_path(@book), method: :delete %>
    <% end %>
  </div>
  <% end %>

<h1>New Book</h1>
  <%= form_with model: @book do |f| %>
    <h4>title</h4>
      <%= f.text_field :title %>
    <h4>opinion</h4>
      <%= f.text_area :body %>
    <%= f.submit 'Creat Book' %>
  <% end %>
