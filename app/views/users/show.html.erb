<!-- ユーザーの詳細 -->
<h1>User info</h1>
<div>
  <h3><%= @user.name %></h3>
  <%= image_tag @user.get_profile_image(100,100) %>
  <% if @user == current_user.id %>
    <p><%= link_to "プロフィール編集", edit_user_path(@user) %></p>
  <% end %>
</div>

<!-- ユーザーの投稿一覧 -->
<h1>Books</h1>
<% @books.each do |book| %>
<div>
  <%= link_to user_path(@user.id) do %>
    <%= image_tag @user.get_profile_image(100,100) %>
  <% end %>
  <p><%= image_tag 'sample-author1.jpg' %></p>
  <p>title：<%= book.title %></p>
  <p>opinion：<%= book.body %></p>
</div>
<% end %>

<!--新規投稿-->
<h1>New Book</h1>
  <%= form_with model: @book do |f| %>
    <h4>title</h4>
      <%= f.text_field :title %>
    <h4>opinion</h4>
      <%= f.text_area :body %>
    <%= f.submit 'Creat Book' %>
  <% end %>

