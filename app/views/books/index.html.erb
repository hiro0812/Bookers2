<!--apprication.html.erbでheader部分とfooter部分のコードは記述済のため、<main>タグのコードのみ記述すれば良い-->


        <!--User infoの部分-->
        <%= render 'list' %>

        <!--Booksの部分-->
        <div class="col-md-8 offset-md-1">
          <h2>Books</h2>
            <table class ="table table-hover table-inverse">
              <thead>
                <tr>
                  <th></th>
                  <th>Title</th>
                  <th>Opinion</th>
                  <th colspan="3"></th>
                </tr>
              </thead>
              <tbody>
                <tr>
                  <% @books.each do |book| %>
                    <td><%= image_tag current_user.get_profile_image(100, 100) %></td>
                    <td>title : <%= link_to book_path(book.id) do %>
                       <%= book.title %>
                       <% end %>
                    </td>
                    <td>opinion：<%= book.body %></td>
                  <% end %>
                </tr>
              </tbody>
            </table>
        </div>
    </div>
  </div>

