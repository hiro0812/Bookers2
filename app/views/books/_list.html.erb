<!--User infoの部分-->
<h2>User info</h2>
<!--image_tagのコード-->
<div>
  <%= image_tag current_user.get_profile_image(100, 100) %>
</div>
<!--nameとintroductionのコード-->
<table class="table">
  <tbody>
    <tr>
      <th>name</th>
      <th><%= current_user.name %></th>
    </tr>
    <tr>
      <th>introduction</th>
      <th><%= current_user.introduction %></th>
    </tr>
  </tbody>
</table>

<!--editアイコンの部分-->
<div class="row">
  <%= link_to edit_user_path(current_user), class: "btn btn-outline-secondary btn-block" do %>
  <i class="fas fa-user-cog"></i>
  <% end %>
</div>

<!--New Bookの部分-->
<h2 class="mt-3">New Book</h2>
<%= form_with model: @book do |f| %>
  <!--titleのコード-->
  <div class="form-group">
    <label for="book_title">title</lavel>
      <%= f.text_field :title, class: "form-control book_title" %>
  </div>
  <!--opinionのコード-->
  <div class="form-group">
    <label for="book_opinion">opinion</lavel>
      <%= f.text_area :body, class: "form-control book_opinion" %>
  </div>
  <!--Create Bookのコード-->
  <div class="form-group">
    <%= f.submit 'Creat Book', class: "btn btn-success" %>
  </div>
<% end %>


