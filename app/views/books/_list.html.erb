<!--User infoの部分-->
<main>
  <p id="notice"></p>
    <div id="error-explanation"></div>
    <div class ="container" px-5 px-sm-0>
      <div class="row">
        <div class ="col-md-3">
          <h2>User info</h2>
          <!--image_tagのコード-->
          <div>
            <%= image_tag current_user.get_profile_image(100, 100) %>
          </div>
          <!--nameとintroductionのコード-->
          <table class="table">
            <tbody>
              <tr>
                <th>name</th>
                <th><%= current_user.name %></th>
              </tr>
              <tr>
                <th>introduction</th>
                <th><%= current_user.introduction %></th>
              </tr>
            </tbody>
          </table>
          <!--editアイコンのコード-->
          <div class="row">
            <div class="edit-icons">
              <%= link_to edit_user_path(current_user), class: "btn btn-outline-secondary btn-block" do %>
              <i class="fas fa-user-cog"></i>
              <% end %>
            </div>
          </div>

          <!--New Bookの部分-->
          <h2 class ="mt-3">New Book</h2>
          <%= form_with model: @book do |f| %>
            <div class = "form-group">
              <label for="book_title">title</lavel>
                <%= f.text_field :title, class: "form-control book_title" %>
            </div>
            <div class = "form-group">
              <label for ="book_opinion">opinion</lavel>
                <%= f.text_area :body, class: "form-control book_opinion" %>
            </div>
            <div class = "form-group">
              <%= f.submit 'Creat Book', class: "btn btn-success" %>
            </div>
          <% end %>
        </div>
      </div>
    </div>
</main>





