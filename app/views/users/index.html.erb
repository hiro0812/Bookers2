<!--User infoの部分-->
<h2>User info</h2>
  <div>
    <%= image_tag current_user.get_profile_image(100, 100) %>
  </div>

  <p>name</p>
    <%= current_user.name %>

  <p>introduction</p>
    <%= current_user.introduction %>

  <div class="edit-icons">
    <%= link_to edit_user_path(current_user), class: "btn btn-outline-secondary btn-block" do %>
    <i class="fas fa-user-cog"></i>
    <% end %>
  </div>

<!--Usersの部分-->
<h2>Users</h2>
  <% @users.each do |user| %>
    <div>
      <p>image : <%= image_tag current_user.get_profile_image(100, 100) %></p>
      <p>name : <%= user.name %></p>
      <p><%= link_to 'show', user_path(current_user)%></p>
    </div>
  <% end %>

<!--New Bookの部分-->
<h2>New Book</h2>
  <%= form_with model: @book do |f| %>
    <h4>title</h4>
      <%= f.text_field :title %>
    <h4>opinion</h4>
      <%= f.text_area :body %>
    <%= f.submit 'Creat Book' %>
  <% end %>
