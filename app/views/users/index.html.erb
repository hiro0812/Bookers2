<!--apprication.html.erbでheader部分とfooter部分のコードは記述済のため、<main>タグのコードのみ記述すれば良い--
<!--main部分-->
<!--app/views/layouts/_notification.htmlにフラッシュメッセージ実装済-->
<div class="container px-5 px-sm-0">
  <div class="row">

    <!--User infoとNew Bookの部分(部分テンプレート済み)-->
    <div class="col-md-3">
      <%= render 'books/list', user: @user ,book: @book %>
    </div>

    <!--Usersの部分-->
    <div class="col-md-8 offset-md-1">
      <h2>Users</h2>
        <table class="table">
          <thead>
            <tr>
              <th>image</th>
              <th>name</th>
              <th colspan="3"></th>
            </tr>
          </thead>
          <tbody>
          <% @users.each do |user| %>
            <tr>
              <th><%= image_tag current_user.get_profile_image(100, 100) %></th>
              <th><%= user.name %></th>
              <th><%= link_to 'Show', user_path(user.id) %></th>
            </tr>
          <% end %>
          </tbody>
        </table>
    </div>

  </div>
</div>

