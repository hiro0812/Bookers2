<!--apprication.html.erbでheader部分とfooter部分のコードは記述済のため、<main>タグのコードのみ記述すれば良い--
<!--main部分-->
<div class="container">
  <div class="row">

    <!--User infoとNew Bookの部分(部分テンプレート済み)-->
    <div class="col-md-3">
      <%= render 'books/list', user: @user ,book: @book_new %>
    </div>

    <!--Book detailの部分-->
    <div class="col-md-8 offset-md-1">
      <h2>Book detail</h2>
        <table class="table">
          <tbody>
            <tr>
              <td><%= link_to user_path(@book.user_id) do %>
                  <%= image_tag current_user.get_profile_image(100, 100) %>
              <br>
                  <%= @book.user.name %>
                  <% end %>
              </td>
              <td>
                <%= link_to book_path(@book.id) do %>
                <%= @book.title %>
                <% end %>
              </td>
              <td>
                <%= @book.body %>
              </td>
              <td>
                <% if @book.user_id == current_user.id %>
                  <%= link_to "Edit", edit_book_path(@book.id), class: "btn btn-sm btn-success" %>
                <% end %>
              </td>
              <td>
                <% if @book.user_id == current_user.id %>
                  <%= link_to "Destroy", book_path(@book.id), method: :delete, "data-confirm" => "本当に削除しますか？", class: "btn btn-sm btn-danger" %>
                <% end %>
              </td>
            </tr>
          </tbody>
        </table>
    </div>
  </div>
</div>
