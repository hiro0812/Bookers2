<!--User infoの部分-->
<%= render 'books/list' %>

<!--Usersの部分-->
<h2>Users</h2>
  <% @users.each do |user| %>
    <div>
      <p>image : <%= image_tag current_user.get_profile_image(100, 100) %></p>
      <p>name : <%= user.name %></p>
      <p><%= link_to 'show', user_path(current_user) %></p>
    </div>
  <% end %>

<!--New Bookの部分-->
<h2>New Book</h2>
  <%= form_with model: @book do |f| %>
    <h4>title</h4>
      <%= f.text_field :title %>
    <h4>opinion</h4>
      <%= f.text_area :body %>
    <%= f.submit 'Creat Book' %>
  <% end %>
